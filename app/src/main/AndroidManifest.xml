<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cec.projectscorpio">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CourseListActivity"
            android:label="@string/app_name"
            android:parentActivityName=".MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <activity
            android:name=".SemesterListActivity"
            android:label="Semester"
            android:parentActivityName=".CourseListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".CourseListActivity" />
        </activity>

        <activity
            android:name=".YoutubeActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="Video"
            android:parentActivityName=".SemesterListActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".SemesterListActivity" />
        </activity>

    </application>

</manifest>